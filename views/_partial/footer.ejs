<div class='footer'>
	<div class='pure-g'>
		<div class='pure-u-2-3'>
			<div class='footer-content'>
				<p><%- site.HOST.footer.text %></p>
				<p><%- site.HOST.footer.license %></p>
			</div>
		</div>
		<div class='pure-u-1-3'>
			<div class='footer-content'>
			<span class="relative-link">
				<% if (site.HOST.social.youtube) { %>
					<a title="Youtube" href="<%- site.HOST.social.youtube %>"><i class="fa fa-youtube-square fa-2x"></i></a>
				<% } %>
				<% if (site.HOST.social.facebook) { %>
					<a title="Facebook" href="<%- site.HOST.social.facebook %>"><i class="fa fa-facebook-square fa-2x"></i></a>
				<% } %>
				<% if (site.HOST.social.github) { %>
					<a title="Github" href="<%- site.HOST.social.github %>"><i class="fa fa-github-square fa-2x"></i></a>
				<% } %>
				<% if (site.HOST.social.googlesite) { %>
					<a title="成績" href="<%- site.HOST.social.googlesite %>"><i class="fa fa-table fa-2x"></i></a>
				<% } %>
			</span>
			<p>Powered by <a target="_blank" href='https://nodejs.org/'>Nodejs</a> © 2018</p>
			</div>
		</div>
	</div>
</div>
